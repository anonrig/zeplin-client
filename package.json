{
  "name": "zeplin-client",
  "version": "1.2.1",
  "description": "Zeplin NodeJS Client with OAuth",
  "main": "dist/main/index.js",
  "module": "dist/module/index.js",
  "types": "dist/main/index.d.ts",
  "repository": "https://github.com/relevantfruit/zeplin-client.git",
  "author": "Yagiz Nizipli <yagiz@relevantfruit.com>",
  "license": "MIT",
  "files": [
    "/dist/**/*"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "style": "run-s style:*",
    "style:format": "prettier --write \"src/**/*.ts\"",
    "style:lint": "eslint src --ext .js,.ts --fix",
    "commit": "git-cz",
    "clean": "rimraf dist && rimraf coverage && rimraf docs",
    "build": "run-s clean && run-p build:*",
    "build:main": "tsc -p tsconfig.json",
    "build:module": "tsc -p tsconfig.module.json",
    "test": "jest --config jestconfig.json",
    "test:watch": "jest --config jestconfig.json --watch",
    "cov": "run-s test && run-s cov:open",
    "cov:open": "open-cli coverage/lcov-report/index.html",
    "cov:publish": "codecov",
    "doc": "typedoc src && run-s doc:open",
    "doc:open": "open-cli docs/index.html",
    "doc:publish": "gh-pages -t -m \"chore: update docs\" -d docs -r https://$GH_TOKEN@github.com/relevantfruit/zeplin-client.git",
    "release": "semantic-release"
  },
  "dependencies": {
    "axios": "^0.21.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^9.1.1",
    "@commitlint/config-conventional": "^12.0.1",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/npm": "^7.0.5",
    "@semantic-release/release-notes-generator": "^9.0.1",
    "@types/jest": "^26.0.4",
    "@types/node": "^14.0.22",
    "@typescript-eslint/eslint-plugin": "^4.0.0",
    "@typescript-eslint/parser": "^3.6.0",
    "codecov": "^3.6.5",
    "commitizen": "^4.0.4",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^7.4.0",
    "eslint-config-prettier": "^8.1.0",
    "gh-pages": "^3.1.0",
    "husky": "^5.2.0",
    "jest": "^26.1.0",
    "npm-run-all": "^4.1.5",
    "open-cli": "^6.0.1",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "semantic-release": "^17.0.7",
    "ts-jest": "^26.1.2",
    "ts-node": "^8.9.1",
    "typedoc": "^0.20.30",
    "typedoc-plugin-nojekyll": "^1.0.1",
    "typescript": "^4.2.3"
  }
}
