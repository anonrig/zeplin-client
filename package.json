{
  "name": "zeplin-client",
  "version": "1.0.0",
  "description": "Zeplin NodeJS Client with OAuth",
  "main": "dist/main/index.js",
  "module": "dist/module/index.js",
  "types": "dist/main/index.d.ts",
  "repository": "https://github.com/relevantfruit/zeplin-client.git",
  "author": "Yagiz Nizipli <yagiz@relevantfruit.com>",
  "license": "MIT",
  "files": [
    "/dist/**/*"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "style": "run-s style:*",
    "style:format": "prettier --write \"src/**/*.ts\"",
    "style:lint": "eslint src --ext .js,.ts --fix",
    "commit": "git-cz",
    "clean": "rimraf dist && rimraf coverage && rimraf docs",
    "build": "run-s clean && run-p build:*",
    "build:main": "tsc -p tsconfig.json",
    "build:module": "tsc -p tsconfig.module.json",
    "test": "jest --config jestconfig.json",
    "test:watch": "jest --config jestconfig.json --watch",
    "cov": "run-s test && run-s cov:open",
    "cov:open": "open-cli coverage/lcov-report/index.html",
    "cov:publish": "codecov",
    "doc": "typedoc src && run-s doc:open",
    "doc:open": "open-cli docs/index.html",
    "doc:publish": "gh-pages -t -m \"chore: update docs\" -d docs -r https://$GH_TOKEN@github.com/relevantfruit/zeplin-client.git",
    "release": "semantic-release"
  },
  "dependencies": {
    "axios": "^0.19.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@types/jest": "^25.1.2",
    "@types/node": "^13.7.0",
    "@typescript-eslint/eslint-plugin": "^2.19.0",
    "@typescript-eslint/parser": "^2.19.0",
    "codecov": "^3.6.4",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "3.1.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "gh-pages": "^2.2.0",
    "husky": "^4.2.1",
    "jest": "^25.1.0",
    "npm-run-all": "^4.1.5",
    "open-cli": "^5.0.0",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.1",
    "semantic-release": "^17.0.2",
    "ts-jest": "^25.2.0",
    "ts-node": "^8.6.2",
    "typedoc": "^0.16.9",
    "typedoc-plugin-nojekyll": "^1.0.1",
    "typescript": "^3.7.5"
  }
}
